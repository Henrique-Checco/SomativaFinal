@model Somativa.Models.Categoria

@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<div class="container">
    <h1 class="text-white">Detalhes da Categoria</h1>

    <div>
        <hr class="text-white" />
        <dl class="row">
            <dt class="col-sm-2 text-white">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10 text-white">
                @Html.DisplayFor(model => model.Nome)
            </dd>
        </dl>
    </div>
    <div class="mt-4">
        <a class="btn text-white" style="background-color:darkblue" asp-action="Edit" asp-route-id="@Model?.CategoriaId">Editar</a>
        <a class="btn btn-secondary ms-3" asp-action="Index">Cancelar</a>
    </div>
</div>


