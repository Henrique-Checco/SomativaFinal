@model Somativa.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<div class="container">
    <h1 class="text-center text-white">Editar Categoria</h1>

    <hr class="text-white" />
    <div class="row" style="display: flex; justify-content: center;">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CategoriaId" />
                <div class="form-group">
                    <label asp-for="Nome" class="control-label text-white"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group mt-4 text-center">
                    <input type="submit" value="Salvar" class="btn text-white" style="background-color:darkblue" />
                    <a class="btn btn-secondary ms-3" asp-action="Index">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
