@model Somativa.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<div class="container">
    <h1 class="text-white">Detalhes do Produto</h1>

    <div>
        <hr class="text-white" />
        <dl class="row">
            <dt class="col-sm-2 text-white">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10 text-white">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2 text-white">
                @Html.DisplayNameFor(model => model.Estoque)
            </dt>
            <dd class="col-sm-10 text-white">
                @Html.DisplayFor(model => model.Estoque)
            </dd>
            <dt class="col-sm-2 text-white">
                @Html.DisplayNameFor(model => model.Preco)
            </dt>
            <dd class="col-sm-10 text-white">
                @Html.DisplayFor(model => model.Preco)
            </dd>
            <dt class="col-sm-2 text-white">
                @Html.DisplayNameFor(model => model.Categoria)
            </dt>
            <dd class="col-sm-10 text-white">
                @Html.DisplayFor(model => model.Categoria.Nome)
            </dd>
            <dt class="col-sm-2 text-white">
                @Html.DisplayNameFor(model => model.Fornecedor)
            </dt>
            <dd class="col-sm-10 text-white">
                @Html.DisplayFor(model => model.Fornecedor.Nome)
            </dd>
        </dl>
    </div>
    <div class="mt-4">
        <a class="btn text-white" style="background-color:darkblue" asp-action="Edit" asp-route-id="@Model?.ProdutoId">Editar</a>
        <a class="btn btn-secondary ms-3" asp-action="Index">Cancelar</a>
    </div>
</div>

