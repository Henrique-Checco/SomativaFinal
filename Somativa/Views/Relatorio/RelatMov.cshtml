@model IEnumerable<Somativa.Models.Movimentacao>

@{
	ViewData["Title"] = "RelatMov";
	var prod = ViewData["Produtos"] as List<Produto>;
	prod.Insert(0, new Produto { ProdutoId = new Guid(), Nome = "Todos" });
}

<div class="imgFundo">
    <div class="container pt-5">
        <div class="p-5" style="background-color:#353333">
            <h1 class="text-white">Relatório de Movimentações</h1>

            <form>
                <div class="mt-3 mb-3">
                    <label class="text-white col col-sm-1">Data início</label>
                    <input name="inDataIni" type="date" class="col-8 col-sm-2 ms-3 ms-sm-0 me-3" />
                    <label class="text-white col col-sm-1 mt-2">Data final</label>
                    <input name="inDataFim" type="date" class="col-8 col-sm-2 ms-4 ms-sm-0 me-sm-3 mt-2" />
                    <label class="text-white col-6 col-sm-1 mt-2">Tipo de movimentação</label>
                    <select name="inTipo" class=" col-4 col-sm-1 ms-3 ms-sm-1 me-3 mt-2">
                        <option value="0">Todos</option>
                        <option value="1">Entradas</option>
                        <option value="2">Saídas</option>
                    </select>
                    <label class="text-white mt-2">Produto</label>
                    <select name="inProduto" class="col-sm-1 ms-3 me-3 mt-2">
                        @foreach (var item in prod)
                        {
                            <option value="@item.Nome">@item.Nome</option>
                        }
                    </select>
                    <button asp-action="SearchMov" class="btn text-white col-12 col-sm-1 mt-3 mt-sm-0" style="background-color:darkblue">Filtrar</button>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered mt-5">
                    <thead class="table table-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nota)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DataHora)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TipoMovimentacao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Produto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantidade)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Unitario)
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="table-dark">
                                    @Html.DisplayFor(modelItem => item.Nota)
                                </td>
                                <td class="table-dark">
                                    @Html.DisplayFor(modelItem => item.DataHora)
                                </td>
                                <td class="table-dark">
                                    @Html.DisplayFor(modelItem => item.TipoMovimentacao)
                                </td>
                                <td class="table-dark">
                                    @Html.DisplayFor(modelItem => item.Produto)
                                </td>
                                <td class="table-dark">
                                    @Html.DisplayFor(modelItem => item.Quantidade)
                                </td>
                                <td class="table-dark">
                                    @Html.DisplayFor(modelItem => item.Unitario)
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



