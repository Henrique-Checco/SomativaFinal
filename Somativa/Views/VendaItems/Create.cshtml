@model Somativa.Models.VendaItem

@{
    ViewData["Title"] = "Criar Item de Venda";
    var VendaIdAux = ViewData["VendaId"]; 
}

<div class="container">
    <h1 class="text-center text-white">Criar Item de Venda</h1>

    <hr class="text-white" />
    <div class="row" style="display: flex; justify-content: center;">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="VendaId" class="control-label text-white"></label>
                    <input asp-for="VendaId" value="@VendaIdAux" class="form-control" readonly />
                </div>
                <div class="form-group mt-3">
                    <label asp-for="ProdutoId" class="control-label text-white"></label>
                    <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId"></select>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Quantidade" class="control-label text-white"></label>
                    <input asp-for="Quantidade" class="form-control" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Unitario" class="control-label text-white"></label>
                    <input asp-for="Unitario" type="number" step=".01" class="form-control" />
                    <span asp-validation-for="Unitario" class="text-danger"></span>
                </div>
                <div class="form-group mt-4 text-center">
                    <button class="btn text-white" style="background-color:darkblue" asp-action="Create">Salvar</button>
                    <a class="btn btn-secondary ms-3" asp-route-id="@VendaIdAux" asp-action="Index">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
