    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light btn btn-dark border-light-2 m-2 p-2 top-rightt" asp-area="Identity" asp-page="/Account/Register">Registro</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light btn btn-dark border-light-2 m-2 p-2 top-right " asp-area="Identity" asp-page="/Account/Login">Login</a>
