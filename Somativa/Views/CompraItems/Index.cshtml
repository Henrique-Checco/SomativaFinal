@model IEnumerable<Somativa.Models.CompraItem>

@{
    ViewData["Title"] = "Itens da Compra";
}

<div class="imgFundo">
    <div class="container pt-5">
        <div class="p-5" style="background-color:#353333">
            <h1 class="text-white">Itens da Compra</h1>

            <div class="mt-2">
                <a asp-action="Create" asp-route-id="@ViewData["CompraId"]" class="btn text-white" style="background-color:darkblue">Criar Novo</a>
                <a asp-action="Index" asp-controller="Compras" class="btn btn-secondary ms-3">Voltar à Compra</a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered mt-5">
                    <thead class="table table-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Compra)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Produto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantidade)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Unitario)
                            </th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="table-dark">
                                    @Html.DisplayFor(modelItem => item.Compra.Nota)
                                </td>
                                <td class="table-dark">
                                    @Html.DisplayFor(modelItem => item.Produto.Nome)
                                </td>
                                <td class="table-dark">
                                    @Html.DisplayFor(modelItem => item.Quantidade)
                                </td>
                                <td class="table-dark">
                                    @Html.DisplayFor(modelItem => item.Unitario)
                                </td>
                                <td class="text-center bg-dark">
                                    <a class="btn" asp-action="Edit" asp-route-id="@item.CompraItemId">
                                        <svg bootstrap-icon="Pencil" class="text-white" width="20" height="20"></svg>
                                    </a>
                                </td>
                                <td class="text-center bg-dark">
                                    <a class="btn" asp-action="Details" asp-route-id="@item.CompraItemId">
                                        <svg bootstrap-icon="FileEarmarkMedical" class="text-white" width="20" height="20"></svg>
                                    </a>
                                </td>
                                <td class="text-center bg-dark">
                                    <a asp-action="Delete" class="btn" asp-route-id="@item.CompraItemId" data-bs-toggle="modal" data-bs-target="#exampleModal_@item.CompraItemId"
                                       data-bs-tittle="Excluir"
                                       data-bs-placement="bottom">
                                        <svg bootstrap-icon="Trash" class="text-white" width="20" height="20"></svg>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>



    @foreach (var item in Model)
    {
        <div class="modal fade" id="exampleModal_@item.CompraItemId" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Excluir</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                    </div>
                    <div class="modal-body">
                        <p>Tem certeza que você deseja excluir?</p>
                        <dl class="row text-center">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Compra)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => item.Compra.Nota)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Produto)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => item.Produto.Nome)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Quantidade)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => item.Quantidade)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Unitario)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => item.Unitario)
                            </dd>
                        </dl>
                    </div>
                    <div class="modal-footer">
                        <form asp-action="Delete" class="text-white" asp-route-id="@item.CompraItemId">
                            <input type="hidden" asp-for="@item.CompraItemId" />
                            <button type="button" class="btn btn-secondary mt-2" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" value="Apagar" class="btn btn-danger mt-2 ms-2">Excluir</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
