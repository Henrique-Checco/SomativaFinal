@model Somativa.Models.CompraItem

@{
    ViewData["Title"] = "Detalhes Item de Venda";
}

<div class="container">
    <h1 class="text-white">Detalhes Item de Compra</h1>

    <div>
        <hr class="text-white" />
        <dl class="row">
            <dt class="col-sm-2 text-white">
                @Html.DisplayNameFor(model => model.Compra)
            </dt>
            <dd class="col-sm-10 text-white">
                @Html.DisplayFor(model => model.Compra.Nota)
            </dd>
            <dt class="col-sm-2 text-white">
                @Html.DisplayNameFor(model => model.Produto)
            </dt>
            <dd class="col-sm-10 text-white">
                @Html.DisplayFor(model => model.Produto.Nome)
            </dd>
            <dt class="col-sm-2 text-white">
                @Html.DisplayNameFor(model => model.Quantidade)
            </dt>
            <dd class="col-sm-10 text-white">
                @Html.DisplayFor(model => model.Quantidade)
            </dd>
            <dt class="col-sm-2 text-white">
                @Html.DisplayNameFor(model => model.Unitario)
            </dt>
            <dd class="col-sm-10 text-white">
                @Html.DisplayFor(model => model.Unitario)
            </dd>
        </dl>
    </div>
    <div class="mt-4">
        <a class="btn text-white" style="background-color:darkblue" asp-action="Edit" asp-route-id="@Model?.CompraItemId">Editar</a>
        <a class="btn btn-secondary ms-3" asp-route-id="@Model.CompraId" asp-action="Index">Cancelar</a>
    </div>
</div>


