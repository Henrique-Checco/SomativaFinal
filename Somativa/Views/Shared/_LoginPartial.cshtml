@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="d-flex justify-content-end" style="width: 45%">
    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <div style="display:flex;justify-content:flex-end">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                    <svg bootstrap-icon="PersonCircle" width="50" height="50" class="text-white" aria-label="Curtir" class=""></svg>
                </a>
            </li>
            <li class="nav-item ">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-white ms-3 mt-2">Sair</button>
                </form>
            </li>
    </div>

        }
        else
        {
    <div style="display:flex; justify-content:flex-end; display:none">
        <li class="nav-item">
            <a class="nav-link text-light btn btn-dark border-light-2 m-2 p-2" asp-area="Identity" asp-page="/Account/Register">Registro</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light btn btn-dark border-light-2 m-2 p-2 " asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </div>


        }
</ul>
</div>